

@using ProjectC.Models
@model Survey

@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }


<style>



    button {
        background-color: orange;
        border: none;
        color: black;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        transition-duration: 0.4s;
    }

        button:hover {
            background-color: orange;
            color: white;
        }

    canvas {
        height: 200%;
        width: 55%;
        position: absolute;
        left: 400px;
        top: 100px;
        border: 1px solid black;
        background-color: rgba(128,128,128, 0.5);
    }



    .dropdown_group select {
        display: block;
        height: 35px;
        width: 135px;
    }

    .feedback_group input {
        display: block;
    }

    .titel {
        position: relative;
        left: 650px;
        top: 50px;
    }

    h2a {
        margin-top: 0;
        margin-bottom: .5rem
    }

    #ui {
        margin-top: 90px;
    }

    h5 {
        margin-top: 0;
        margin-bottom: 0;
        background-color: orange;
        margin-bottom: .5rem;
        font-family: inherit;
        font-weight: 500;
        line-height: 1.2;
        color: black;
    }
</style>

@using (Html.BeginForm("Save", "Survey", FormMethod.Post))
{
    @Html.AntiForgeryToken()


    <body>
        <canvas></canvas>
        <div class="container">
            <div class="row">
                <div class="col-lg-3></div>
                <div class="col-lg-6">
                    <div id="ui">


                        <div class="row">
                            <div class="col-lg-6" style="position: relative; left: 350px; top: 50px; width:1200px;">
                                <h5>Feedbackformulier </h5>
                                <label>Email: </label>
                                @Html.EditorFor(model => model.Email, new { htmlattributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="row" style="position: relative; left: 350px; top: 150px;">
                            <div class="col-lg-6" style="width:1200px;">
                                <h5> Vragen </h5>
                                @Html.Label("Wat is volgens u het sterkste punt van de website?")
                                @Html.EditorFor(model => model.Answer1, new { htmlattributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="row" style="position: relative; left: 350px; top: 200px;">
                            <div class="col-lg-6" style="width:1200px;">
                                @Html.Label("Wat is volgens u het zwakste punt van de website?")
                                @Html.EditorFor(model => model.Answer4, new { htmlattributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="row" style="position: relative; left: 350px; top: 250px;">
                            <div class="col-lg-6">
                                @Html.Label("Wat is de meest overzichtelijk van de website?")
                                @Html.DropDownListFor(model => model.Answer2, new SelectList(Enum.GetValues(typeof(Option))))

                            </div>
                        </div>
                        <div class="row" style="position: relative; left: 350px; top: 300px;">
                            <div class="col-lg-6">
                                @Html.Label("wat vind u het minste overzichtelijk van de website?")
                                @Html.DropDownListFor(model => model.Answer3, new SelectList(Enum.GetValues(typeof(Option1))))
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-lg-10" style="position: absolute; left: 750px; top: 1050px;">
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3"></div>
                </div>
            </div>
    </body>
}






@model IEnumerable<MailChimp.Net.Models.Campaign>


<link rel="stylesheet" type="text/css" href="~/styles/tijmenstyle.css?version=1" />
<link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
@{
    ViewBag.Title = "Saved";
    Layout = "~/Views/Shared/_Layout.cshtml";

}




<table class="table">
    <tr>
        <th>
            <div class="dropdown">
                <button class="btn" type="button" data-toggle="dropdown">
                    kies lijst
                </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="#">Action</a>
                    <a class="dropdown-item" href="#">Another action</a>
                    <a class="dropdown-item" href="#">Something else here</a>
                </div>
            </div>
        <th>ID</th>
        <th>Title</th>
        <th>Aantal ontvangers</th>
        <th>createtime</th>
        <th>versturen</th>
    </tr>

    @foreach (var campaign in Model)
    {
        <tr>
            <td><a href="@campaign.ArchiveUrl" target="_blank" class="btn"> inzien</a></td>
            <td>@campaign.Id</td>
            <td>@campaign.Settings.Title</td>
            <td>@campaign.EmailsSent</td>
            <td> @campaign.CreateTime</td>
            <td> <a class="btn" @Html.ActionLink("Versturen", "Send", "Campaings", new { id = campaign.Id }, null)></a></td>
        </tr>
    }

</table>

<p>
    <a href="~/Campaings/Drafts" class="btn"> Drafts</a>
</p>





<script>
    $(document).ready(function () {
        $(".dropdown-toggle").dropdown();
    });
</script>

@model IEnumerable<ProjectC.Models.ContactPerson>
    


@{ ViewBag.Title = "Contact personen";
    Layout = "~/Views/Shared/_Layout.cshtml"; }






<table class="table">
   
    <tr>
        <th> </th>
        <th>
            voornaam
        </th>
        <th>

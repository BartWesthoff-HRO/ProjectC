    @foreach (var item in Model)
    {
        using (Html.BeginForm("Verwijderen", "ContactPerson", new { id = item.persoonid }))
        {
<tr>
    <td>
        <a href="~/Contactperson/Edit/@item.persoonid.ToString()" class="btn"> inzien</a>
    </td>

@model ProjectC.Models.ContactPerson

@{ ViewBag.Title = "Contactpersoon toevoegen";
    Layout = "~/Views/Shared/_Layout.cshtml"; }


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="container">
        <div class="row justify-content-center">
            <div id="ui">
                <form class="form-group">

                    @*boveenste row*@
                    <div class="row cp-holder justify-content-center">
                        <h5 class="form-name">Persoonlijke informatie: </h5>
                        <div class="col-lg-4">
                            <label>Voornaam:</label>
                            @Html.EditorFor(model => model.voornaam, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.voornaam, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-lg-2">
                            <label>Tussenvoegsel(s):</label>
                            @Html.EditorFor(model => model.tussenvoegsel, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.tussenvoegsel, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-lg-4">
                            <label>Achternaam:</label>
                            @Html.EditorFor(model => model.achternaam, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.achternaam, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @*middelste row*@
                    <div class="row cp-holder justify-content-center">
                        <h5 class="form-name">Bedrijfsinformatie: </h5>
                        <div class="col-lg-4">
                            <label>Email:</label>
                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-lg-4">
                            <label>Bedrijf:</label>
                            <input type="text" name="username" class="form-control">
                        </div>
                        <div class="col-lg-2">

                        </div>
                        <div class="col-lg-4">
                            <label>Labels:</label>
                            <input type="text" name="username" class="form-control">
                        </div>
                        <div class="col-lg-6">

                        </div>
                    </div>
                    @*onderste row*@
                    <div class="row purgatory">
                        <div class="col-3 cancel-button">
                            <a href="/contactperson" class="btn btn-default">Terug</a>
                        </div>
                        <div class="col-3 submit-button">
                            <input type="submit" value="Opslaan" class="btn btn-default" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

}



<style>
    #ui {
        margin-top: 90px;
    }

    input[type=text] {
        margin: 8px 0;
        box-sizing: border-box;
        background-color: #f8f8f8;
        left: 500px;
        top: 80px;
        resize: none;
    }
</style>

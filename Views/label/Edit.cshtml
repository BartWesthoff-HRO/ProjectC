@model ProjectC.Models.label


@{ ViewBag.Title = "Verander label";
    Layout = "~/Views/Shared/_Layout.cshtml"; }



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.labelid)
    <div class="container">

        <div class="row">

            <div class="col-lg-3"></div>

            <div class="col-lg-6">
                <div id="ui">
                    <form class="form-group">

                        @*boveenste row*@
                        <div class="row form-holder">
                            <div>
                                <h5 class="label-name">Labelnaam: </h5>
                                @Html.EditorFor(model => model.labelname, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.labelname, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-3 cancel-button">
                                <button href="/label/index" class="btn btn-default cancel-button">Terug</button>
                            </div>
                            <div class="col-3 submit-button">
                                <input type="submit" value="Opslaan" class="btn btn-default" />
                            </div>
                        </div>


                    </form>
                </div>

            </div>

            <div class="col-lg-3"></div>


        </div>

    </div>}



<style>
    #ui {
        margin-top: 90px;
    }

    input[type=text] {
        margin: 8px 0;
        box-sizing: border-box;
        background-color: #f8f8f8;
        left: 500px;
        top: 80px;
        resize: none;
    }
</style>
